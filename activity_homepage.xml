<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage">




    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:liftOnScroll="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/purple_500"
            app:title="TradeBud" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/main_toolbar">

            <LinearLayout
                android:id="@+id/papa_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/bacha_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageview1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/glasses"/>

                    <TextView
                        android:id="@+id/textview1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="RayBan description Gasses are in perfect condition anti glare with blue light filters \n Both lenses works properly and comes with 2 free frames and case /n Also have certificate of ownership "/>

                </LinearLayout>

                <Button
                    android:id="@+id/Tbutt1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Trade"/>

                <LinearLayout
                    android:id="@+id/bacha_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageview2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/hp_bok"/>

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textColor="@color/black"
                        android:text="Book Set of all 7 Harry Potter Books all in good condition. No pages are missing /n Comes with set cover /n tRade is up for negotiation."
                        android:textStyle="bold"/>

                </LinearLayout>

                <Button
                    android:id="@+id/Tbutt2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Trade"/>
                <LinearLayout
                    android:id="@+id/bacha_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageview3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/hplaptop"/>

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textColor="@color/black"
                        android:text="Hp pavalion Laptop 8gb Ram 256gb ssd and 256 gb Hard Drive /n intel core 5 and nvidia gtx graphics card current value in current condition worth at 34000 I.N.R. any android devices of that range up for negotiation. "
                        android:textStyle="bold"/>

                </LinearLayout>

                <Button
                    android:id="@+id/Tbutt3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Trade"/>
                <LinearLayout
                    android:id="@+id/bacha_layout4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageview4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/bag"
                        />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textColor="@color/black"
                        android:text="Converse yellow bag for Girls \n  Is in good condition chaind and all works fine have no tearing in warranty period \n trade u for negotiation."
                        android:textStyle="bold"/>

                </LinearLayout>

                <Button
                    android:id="@+id/Tbutt4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Trade"/>
                <LinearLayout
                    android:id="@+id/bacha_layout5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageview5"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/keybord"/>

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="RGB Keyboard by Logitech 2020 model Works good not key malfunction . \n LEDs work good sound is also crisp USB keyboard /n Any electronics up for negotiation. "/>

                </LinearLayout>

                <Button
                    android:id="@+id/Tbutt5"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Trade"/>
                <LinearLayout
                    android:id="@+id/bacha_layout6"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageview6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/shoe"/>

                    <TextView
                        android:id="@+id/textview6"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textColor="@color/black"
                        android:text="Converse Black Shoe comes with box and warranty card. \n In good condition have no wear or tear \n Up for trade of gaming mouse and up for negotiation too."
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <Button
                    android:id="@+id/Tbutt6"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Trade"/>
                <LinearLayout
                    android:id="@+id/bacha_layout7"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageview7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/headphpnes"/>

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="Boat Wireless Headphones are in good condition both pods work good have good bass \n U will have good time using this \n trade up for negotiation  "/>

                </LinearLayout>

                <Button
                    android:id="@+id/Tbutt7"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Trade"/>











            </LinearLayout>

        </ScrollView>

    </com.google.android.material.appbar.AppBarLayout>







</RelativeLayout>